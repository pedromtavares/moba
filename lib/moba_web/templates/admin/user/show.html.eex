<section id="torch-toolbar">
  <div class="torch-container">
    <%= link "Edit", to: Routes.user_path(@conn, :edit, @user), class: "torch-button" %>
    <%= link "Back", to: Routes.user_path(@conn, :index), class: "torch-button" %>
  </div>
</section>

<section id="torch-header-and-content">
  <div class="torch-container">
    <div class="header">
      <h3>User Details</h3>
    </div>
    <ul>

        <li>
          <div class="torch-show-label">Username:</div>
          <div class="torch-show-data"><%= @user.username %></div>
        </li>

        <li>
          <div class="torch-show-label">Email:</div>
          <div class="torch-show-data"><%= @user.email %></div>
        </li>

        <li>
          <div class="torch-show-label">Is admin:</div>
          <div class="torch-show-data"><%= @user.is_admin %></div>
        </li>

        <li>
          <div class="torch-show-label">Level:</div>
          <div class="torch-show-data"><%= @user.level %></div>
        </li>

        <li>
          <div class="torch-show-label">Experience:</div>
          <div class="torch-show-data"><%= @user.experience %></div>
        </li>

        <li>
          <div class="torch-show-label">Tutorial Step:</div>
          <div class="torch-show-data"><%= @user.tutorial_step %></div>
        </li>

        <li>
          <div class="torch-show-label">PVE hero:</div>
          <div class="torch-show-data"><%= @user.current_pve_hero_id %></div>
        </li>

        <li>
          <div class="torch-show-label">PVP hero:</div>
          <div class="torch-show-data"><%= @user.current_pvp_hero_id %></div>
        </li>

        <li>
          <div class="torch-show-label">PVP Points:</div>
          <div class="torch-show-data"><%= @user.pvp_points %></div>
        </li>

        <li>
          <div class="torch-show-label">Ranking:</div>
          <div class="torch-show-data"><%= @user.ranking %></div>
        </li>

    </ul>
  </div>
</section>