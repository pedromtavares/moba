<section id="torch-toolbar">
  <div class="torch-container">
    <%= link "Edit", to: Routes.item_path(@conn, :edit, @item), class: "torch-button" %>
    <%= link "Back", to: Routes.item_path(@conn, :index), class: "torch-button" %>
  </div>
</section>

